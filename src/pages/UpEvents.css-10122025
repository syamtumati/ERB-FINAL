/* ===================================================== */
/* UPCOMING EVENTS ‚Äî UNIFORM WITH ALL OTHER PAGES       */
/* ===================================================== */

.upevents-page {
  min-height: 100vh;

  /* NAVY FABRIC / LINEN TEXTURE */
  background:
    repeating-linear-gradient(
      0deg,
      rgba(5, 20, 45, 0.40),
      rgba(5, 20, 45, 0.40) 4px,
      rgba(3, 15, 35, 0.40) 4px,
      rgba(3, 15, 35, 0.40) 8px
    ),
    radial-gradient(circle at top, #000A1F 0%, #00142E 50%, #000818 100%);
  background-attachment: fixed;

  color: #EAF1FF;
  font-family: "Georgia", serif;
  display: flex;
  flex-direction: column;
  overflow-x: hidden;
}

/* Better handling on some mobile browsers (Android/iOS) */
@supports (-webkit-touch-callout: none) {
  .upevents-page {
    min-height: -webkit-fill-available;
  }
}

/* MAIN CONTENT */
.upevents-simple {
  flex: 1;                        /* pushes footer to the bottom */
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 8rem 0;                /* vertical padding only */
}

.upevents-simple .container {
  max-width: 800px;
  margin: 0 auto;
  padding: 0 2rem;                /* consistent inner padding */
}

.upevents-simple h1 {
  font-size: 3.6rem;
  color: #ffffff !important;
  margin-bottom: 2rem;
  font-weight: 900;
  letter-spacing: -1px;
}

.message {
  font-size: 1.6rem;
  line-height: 2;
  color: #ffffff !important;
  margin: 2rem 0;
}

.sub-message {
  font-size: 1.3rem;
  color: #ffffff !important;
  margin: 1.5rem 0;
}

/* BUTTON */
.home-btn {
  display: inline-block;
  margin-top: 3rem;
  padding: 1.2rem 3.5rem;
  background: linear-gradient(90deg, #6b4e31, #8c6b47);
  color: #ffffff;
  font-weight: 800;
  font-size: 1.3rem;
  text-decoration: none;
  text-transform: uppercase;
  letter-spacing: 2px;
  border-radius: 999px;
  box-shadow: 0 20px 55px rgba(107, 78, 49, 0.55);
  transition: all 0.3s ease;
}

.home-btn:hover {
  transform: translateY(-8px);
  background: linear-gradient(90deg, #8c6b47, #a07d5b);
  box-shadow: 0 35px 80px rgba(107, 78, 49, 0.8);
}

/* CLEAN FOOTER (Same as all other pages) */
.clean-footer {
  background: linear-gradient(135deg, #f9f3e8, #fdf8f0, #f5efe2);
  padding: 4rem 2rem 3rem;
  text-align: center;
  border-top: 1px solid rgba(0,0,0,0.08);
  margin: 0 !important;
  flex-shrink: 0;
  font-family: "Georgia", serif;
  width: 100%;
  margin-top: auto;               /* ‚≠ê push footer to the bottom */
}

.footer-inner {
  max-width: 1000px;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  gap: 1.8rem;
  align-items: center;
}

.church-name {
  font-size: 2.6rem;
  font-weight: 900;
  color: #8b4513;
  letter-spacing: -1px;
}

.footer-nav {
  display: flex;
  flex-wrap: wrap;
  gap: 2.4rem;
  justify-content: center;
  max-width: 900px;
  margin: 0 auto;
}

@media (min-width: 640px) {
  .footer-nav {
    flex-wrap: nowrap;
    gap: 3rem;
  }
}

.footer-nav a {
  color: #5d4037;
  font-size: 1.05rem;
  text-transform: uppercase;
  letter-spacing: 2px;
  text-decoration: none;
  font-weight: 600;
  white-space: nowrap;
  transition: color 0.3s ease;
}

.footer-nav a:hover {
  color: #8b4513;
}

.copyright {
  font-size: 0.88rem;
  color: #6d4c41;
  opacity: 0.9;
}

/* MOBILE / TABLET (‚â§ 768px) */
@media (max-width: 768px) {

  .upevents-simple {
    padding: 6rem 0;
  }

  .upevents-simple .container {
    padding: 0 1.5rem;
  }

  .upevents-simple h1 {
    font-size: 2.8rem;
  }

  .message {
    font-size: 1.4rem;
  }

  .sub-message {
    font-size: 1.2rem;
  }

  .home-btn {
    padding: 1rem 3rem;
    font-size: 1.15rem;
    width: 100%;
    max-width: 320px;
  }
}

/* MOBILE (phones ‚â§ 600px) ‚Äì match all other pages */
@media (max-width: 600px) {
  .upevents-simple {
    padding: 5.5rem 0;
  }

  .upevents-simple .container {
    padding: 0 1.4rem;
  }

  .upevents-simple h1 {
    font-size: 2.4rem;
  }

  .message {
    font-size: 1.3rem;
    line-height: 1.9;
  }

  .sub-message {
    font-size: 1.1rem;
  }

  .home-btn {
    width: 100%;
    max-width: 300px;
    font-size: 1.1rem;
  }

  /* üîΩ FOOTER: force single-column layout on all phones */
  .footer-nav {
    flex-direction: column;
    flex-wrap: nowrap;
    align-items: center;
    gap: 1.2rem;
  }

  .footer-nav a {
    font-size: 0.9rem;
    letter-spacing: 1.4px;
  }
}

/* Remove old footer classes if they exist */
.biscuit-footer,
.footer-container,
.footer-logo,
.footer-links,
.footer-copyright,
.latin {
  display: none !important;
}

/* ===================================================== */
/* DESKTOP ALIGNMENT ‚Äî MATCH ALL OTHER PAGES             */
/* ===================================================== */
@media (min-width: 1024px) {
  .upevents-simple {
    padding-top: 10rem !important;
    padding-bottom: 4rem !important;  /* was 8rem */
  }

  /* 1Ô∏è‚É£ Align the HERO (title + text) with logo */
  .upevents-simple .container {
    position: relative;
    left: -60px;     /* same global alignment offset */
    margin-bottom: 1.5rem;
  }

  /* 2Ô∏è‚É£ Align the button with the same left baseline */
  /* Fix button width + alignment + one-line text */
  .home-btn {
    display: inline-block;
    width: 400px;        /* keep text on one line */
    position: relative;
    left: -10px;         /* align with logo text baseline */
    text-align: center;
    white-space: nowrap;
    margin-bottom: 0 !important;
  }

  /* 3Ô∏è‚É£ Align footer church-name + copyright */
  .clean-footer .church-name,
  .clean-footer .copyright {
    position: relative;
    left: -60px;
  }
}

